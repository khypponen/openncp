<?xml version="1.0" encoding="ISO-8859-1" standalone="yes"?>
<PolicySet PolicyCombiningAlgId="urn:oasis:names:tc:xacml:1.0:policy-combining-algorithm:permit-overrides" PolicySetId="optin-xcpd" xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os http://docs.oasis-open.org/xacml/access_control-xacml-2.0-policy-schema-os.xsd">
    <Description>Check for the action</Description>
    <Target/>
    <Policy PolicyId="policyId2" RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:permit-overrides">
        <Target/>
        
        
        <Rule Effect="Permit" RuleId="permitId">
            <Target>
                <Actions>
                    <Action>
                        <ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                         <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">success</AttributeValue>
                         <ActionAttributeDesignator AttributeId="urn:eSENS:outcome" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        </ActionMatch>
                    </Action>
                </Actions>
            </Target>
        </Rule>
      <Rule Effect="Deny" RuleId="denyID"/>
        
        <Obligations>
            <!-- When the corner 3 receives the message, in case of success, it returns a RelayAcceptanceRejection, which is not considered
                to be a non repudiation token, although it can be seen as an NRS -->
           
            <Obligation ObligationId="urn:eSENS:obligations:nrd:ETSIREM" FulfillOn="Permit">
                <AttributeAssignment AttributeId="urn:eSENS:obligations:nrd:ETSIREM:version" DataType="http://www.w3.org/2001/XMLSchema#string">
                    1
                </AttributeAssignment>
                <AttributeAssignment AttributeId="urn:eSENS:obligations:nrd:ETSIREM:PolicyID" DataType="http://www.w3.org/2001/XMLSchema#string">
                    urn:oid:1.2.3.5
                </AttributeAssignment>
               
                </Obligation>
            <Obligation ObligationId="urn:eSENS:obligations:nrd:ETSIREM" FulfillOn="Deny">
                <AttributeAssignment AttributeId="urn:eSENS:obligations:nrd:ETSIREM:version" DataType="http://www.w3.org/2001/XMLSchema#string">
                    1
                </AttributeAssignment>
                <AttributeAssignment AttributeId="urn:eSENS:obligations:nrd:PolicyID" DataType="http://www.w3.org/2001/XMLSchema#string">
                    urn:oid:1.2.3.5
                </AttributeAssignment>
                
            </Obligation>
        </Obligations>
        
        
    </Policy>
</PolicySet>

